@model List<Model.EF.Menu>
<div class="call">
    <p><span>Need help?</span> call us <span class="number">0354.941.876</span></span></p>
</div>
<div class="account_desc">
    @{ 
        var session = (OnlineShop.Common.UserLogin)Session[OnlineShop.Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
            }
        </ul>
    }
    else
    {
        <ul>
            <li>Xin chào: @session.Name</li>
            <li>@Html.ActionLink("Thoát", "Logout", "User")</li>
            
            <li><a href="/User/Edit/@session.UserID">Tài khoản</a></li>
        </ul>
    }
</div>
<div class="clear"></div>
